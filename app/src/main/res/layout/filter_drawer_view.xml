<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_drawer_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/ll_bottom_drawer_filter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:background="@color/white"
            android:id="@+id/tv_drawer_filter_clear"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="清空"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_drawer_filter_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/hy_common_orange"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ll_bottom_drawer_filter"
        android:background="@color/hy_common_line_gray" />

</RelativeLayout>